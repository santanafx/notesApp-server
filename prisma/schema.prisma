generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  email    String @unique
  password String

  notes Note[]
}

model Note {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  text String @db.VarChar(255)

  noteId String
  note   User   @relation(fields: [noteId], references: [id])
}
